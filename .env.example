# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cubis_whiteboard

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3000

# Zitadel OpenID
ZITADEL_CLIENT_ID=your-zitadel-client-id
ZITADEL_CLIENT_SECRET=your-zitadel-client-secret
ZITADEL_ISSUER=https://your-instance.zitadel.cloud

# File Storage: "local" or "s3"
STORAGE_PROVIDER=local
LOCAL_UPLOAD_DIR=./uploads

# S3 / R2
S3_ENDPOINT=https://your-account.r2.cloudflarestorage.com
S3_REGION=auto
S3_BUCKET=cubis-whiteboard
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Redis (for Socket.IO room state)
REDIS_URL=redis://localhost:6379
